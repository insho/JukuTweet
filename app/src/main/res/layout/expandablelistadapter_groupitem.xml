<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/balls2"
    android:padding="8dp"
    android:background="@android:color/white">

    <ImageButton  android:id="@+id/favorite_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:focusable="false"
        android:clickable="false"
        android:visibility="gone"
        android:contentDescription="@string/favorites_star"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="26sp"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/lblListHeaderCount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/lblcolorbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textColor="@android:color/black" />




    <TextView
        android:id="@+id/listitem_colors_1"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        xmlns:android="http://schemas.android.com/apk/res/android" />

    <TextView
        android:id="@+id/listitem_colors_2"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        xmlns:android="http://schemas.android.com/apk/res/android" />

    <TextView
        android:id="@+id/listitem_colors_3"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        xmlns:android="http://schemas.android.com/apk/res/android" />


    <TextView
        android:id="@+id/listitem_colors_4"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        xmlns:android="http://schemas.android.com/apk/res/android" />



</LinearLayout>