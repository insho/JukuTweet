<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridTop"

        android:columnCount="2"
        android:rowCount="4"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:padding="2dp">


        <TextView
            android:text="@string/menuoption_text_type"
            android:id="@+id/txtRow1"
            android:gravity="start"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            xmlns:android="http://schemas.android.com/apk/res/android" />

        <TextView
            android:id="@+id/btnRow1"
            android:gravity="start"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:clickable="true"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:textAppearance="?android:attr/textAppearanceMedium"
            xmlns:android="http://schemas.android.com/apk/res/android" />

        <TextView
            android:text="@string/menuoption_text_size"
            android:id="@+id/txtRow2"
            android:gravity="start"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"


            android:textAppearance="?android:attr/textAppearanceMedium"
            xmlns:android="http://schemas.android.com/apk/res/android" />

        <TextView
            android:id="@+id/btnRow2"
            android:gravity="start"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:clickable="true"
            style="@style/Widget.AppCompat.Spinner.Underlined"

            android:textAppearance="?android:attr/textAppearanceMedium"
            xmlns:android="http://schemas.android.com/apk/res/android" />



        <TextView
            android:text="@string/menuoption_text_timer"
            android:id="@+id/txtRow3"
            android:gravity="start"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"

            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            xmlns:android="http://schemas.android.com/apk/res/android"

            />


        <TextView
            android:id="@+id/btnRow3"
            android:gravity="start"
            android:textSize="20sp"
            android:textColor="@android:color/black"

            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"


            android:clickable="true"
            android:visibility="gone"

            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:textAppearance="?android:attr/textAppearanceMedium"
            xmlns:android="http://schemas.android.com/apk/res/android" />

        <TextView
            android:text="@string/menuoption_text_colors"
            android:id="@+id/textViewColors"
            android:gravity="start"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            xmlns:android="http://schemas.android.com/apk/res/android"

            />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_row="3"
            android:layout_marginTop="10dp"
            android:layout_column="1"
            android:id="@+id/layoutid"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/listitem_colors_1"
                android:gravity="start"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                xmlns:android="http://schemas.android.com/apk/res/android" />

            <TextView
                android:id="@+id/listitem_colors_2"
                android:gravity="start"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                xmlns:android="http://schemas.android.com/apk/res/android" />

            <TextView
                android:id="@+id/listitem_colors_3"
                android:gravity="start"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                xmlns:android="http://schemas.android.com/apk/res/android" />


            <TextView
                android:id="@+id/listitem_colors_4"
                android:gravity="start"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                xmlns:android="http://schemas.android.com/apk/res/android" />
        </LinearLayout>


    </GridLayout>


</LinearLayout>