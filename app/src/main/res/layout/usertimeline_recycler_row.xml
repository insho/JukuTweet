<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:descendantFocusability="blocksDescendants"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:weightSum="1"
            android:minHeight="30dp"
            android:orientation="horizontal"
            android:id="@+id/browseitems_layout"

            >



            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:layout_weight=".9"
                android:id="@+id/browseitems_layout2"
                android:focusable="false"
                android:focusableInTouchMode="false">

                <TextView
                    android:id="@+id/timelineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:clickable="false"
                    android:ellipsize="marquee"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:alpha=".8"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/timelineDisplayScreenName"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/timelineName"
                    android:layout_toEndOf="@+id/timelineName"
                    android:clickable="false"
                    android:ellipsize="marquee"
                    android:alpha=".8"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:textSize="16sp" />

            </LinearLayout>



            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:id="@+id/timelineStarLayout"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:minHeight="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/timelineDisplayScreenName"
                android:layout_toEndOf="@+id/timelineDisplayScreenName">

                <ImageButton  android:id="@+id/favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="star"
                    android:src="@drawable/ic_star_black"
                    android:visibility="visible"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    />


            </FrameLayout>


        </LinearLayout>



    <TextView
        android:id="@+id/tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:clickable="false"
        android:layout_marginTop="4dp"
        android:alpha=".9"
        android:ellipsize="marquee"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createdAt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="marquee"
            android:textStyle="italic"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="15sp" />


        <ImageButton  android:id="@+id/retweetImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="retweeted"
            android:src="@drawable/ic_twitter_retweet_black_18dp"
            android:alpha=".6"
            android:background="@android:color/transparent"
            android:gravity="start"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            />
        <TextView
            android:id="@+id/retweeted"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="marquee"
            android:textStyle="italic"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="15sp" />

        <ImageButton  android:id="@+id/heart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="favorited"
            android:src="@drawable/ic_heart_black_18dp"
            android:background="@android:color/transparent"
            android:gravity="start"
            android:clickable="false"
            android:alpha=".6"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/favorited"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="marquee"
            android:textStyle="italic"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="15sp" />




    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:padding="2dip"
        android:background="?android:attr/listDivider"
        android:visibility="visible"
        android:alpha="50"/>

</LinearLayout>